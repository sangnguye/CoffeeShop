@model CoffeShop.Models.Products
@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sửa sản phẩm</h2>

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Tên sản phẩm</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Chi tiết</label>
        <input asp-for="Detail" class="form-control" />
    </div>
    <div class="form-group">
        <label>Giá</label>
        <input asp-for="Price" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ảnh (URL)</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="IsTrendingProduct" class="form-check-input" />
        <label class="form-check-label">Sản phẩm nổi bật</label>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>
