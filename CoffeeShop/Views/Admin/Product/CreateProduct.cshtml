@model CoffeShop.Models.Products

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thêm sản phẩm mới</h2>

<form asp-action="CreateProduct" method="post">
    <div class="form-group">
        <label>Tên sản phẩm</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Chi tiết</label>
        <input asp-for="Detail" class="form-control" />
    </div>
    <div class="form-group">
        <label>Giá</label>
        <input asp-for="Price" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ảnh (URL)</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="IsTrendingProduct" class="form-check-input" />
        <label class="form-check-label">Sản phẩm nổi bật</label>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Lưu</button>
</form>
